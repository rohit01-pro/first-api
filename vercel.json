{
  "version": 2,
  "builds": [
    {
      "src": "backend/web.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/web.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
